<h1>クリエイター情報</h1>
<div class="container">
  <div class="row">
    <% begin %>
      <%= image_tag @user.image.variant(resize: '150x150').processed ,class: 'icon upimage' %>
    <% rescue => e %>
      <%=image_tag('/mobu.png',class: 'icon upimage') %>
    <% end %><br>
    
    <% if @creator.header? %>
      <%= image_tag @creator.header.url ,class: 'header' %>
    <% else %>
      <%=image_tag('/nothing.png',class: 'header') %>
    <% end %>
    <br><br>
    
    <%="ニックネーム：#{@user.nickname}" %>
  </div>
</div>
