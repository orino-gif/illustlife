<%= ENV['ACCESS_LABORATORY'] %>
<h1>クリエイター紹介</h1><br>
<div class="container-fluid">
  <div class="row">
    <h3>■キャラクター、道具</h3>
  </div>
  
  <div class="row">
    
    <% begin %>
      <%# raise #意図的にエラーを発生%>
      
      <% @creators.each do |creator| %>
        <div class="col-md-auto">
          <% if creator.user.confirmed_at? #ユーザー認証済みの場合画像を表示 %>
            <%= display_img(creator) %>
            <div class="text-center">
              <span style="font-size: 12px;">
                <%= creator.user.nickname %>
              </span>
            </div>
          <% end %>
        </div>
      <% end %>
      
    <% rescue => e %>
        <%= p e%>
    <% end %>
  </div>
  
  <div class="row">
    <h3>■背景</h3><br>
  </div>
  
