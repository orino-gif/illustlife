.row
  = display_header(@authorizer.creator, 'size-middle-Horizontal_variable_rectangle fit-cover')
.row
  .col-3
    = display_icon(@authorizer.creator, 'size-large-square rounded-circle fit-cover position-top-long size-lg')
  .col-1
    - if (('new' == controller.action_name) || ('show' == controller.action_name)) && (true == @authorizer.creator.request_acceptance_permission)
      - if (user_signed_in?) && (@authorizer.id == current_user.id)
        = image_tag '/img/request.png', class:'size-middle-square position-top-middle size-md'
      - else
        = link_to image_tag('/img/request.png', class:'size-middle-square position-top-middle size-md'), "/requests/#{@authorizer.creator.user_id}/new"
    - else
      = image_tag '/img/request_stop.png', class:'size-middle-square position-top-middle'
      - if user_signed_in? && (@authorizer.id != current_user.id) && (@notification_users.find_by(resume_user: params[:id]).nil?)
        %button.btn.btn-light.font-Xsmall.position-top-shortX.position-left= link_to "再開を通知", "/resumes/#{@authorizer.creator.user_id}/new"
  .col-3
    
  .col-1
    = display_sns(@authorizer.creator.twitter, '/img/twitter.png', 'size-small-square position-top-short')
  .col-1
    = display_sns(@authorizer.creator.pixiv, '/img/pixiv.png', 'size-small-square position-top-short')
  .col-1
    = display_sns(@authorizer.creator.instagram, '/img/instagram.png', 'size-small-square position-top-short')
.row.my-5
  = "ニックネーム：#{@authorizer.nickname}"
  = "、作業予定日数：#{@authorizer.creator.working_days}日"
  - if 0 != @authorizer.creator.number_of_works
    = "、納品数：#{@authorizer.creator.number_of_works}点、"
    = "平均納品日数：#{@authorizer.creator.average_delivery_time}日、締切厳守率：#{@authorizer.creator.deadline_strict_adherence_rate}%、"
    = "返信率:#{@authorizer.creator.reply_rate}%"
  - else
    = '、納品作品なし'