<h1>新規リクエスト</h1>

<div class="container">
  <div class="row">
    
    <div class="col-md-auto">
      <%= form_with(model: @request, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :金額 %>
          <%= f.text_field :request_money, autofocus: true, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :"本文(700文字以内)" %>
          <%= f.text_area :request_message, autofocus: true, class: 'form-control' %>
        </div>
      
        <div>
          <%= submit_tag("送信") %>
        </div>
      <% end %>
    </div>
    
    <div class="col-md-auto border border-primary">
      <%= form_with(model: @request, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :金額 %>
          <%= f.text_field :request_money, autofocus: true, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :"本文(700文字以内)" %>
          <%= f.text_area :request_message, autofocus: true, class: 'form-control' %>
        </div>
      
        <div>
          <%= submit_tag("送信") %>
        </div>
      <% end %>
    </div>
  </div>
</div>
