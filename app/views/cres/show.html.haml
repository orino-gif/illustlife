- content_for(:html_title) { 'ユーザー情報' }
%h1.ll_font.ws_bgc ユーザー情報
.container
  = render 'shared/user_hdr'
  - if 'production' != ENV['RAILS_ENV']
    .row
      %h2.l_font イラスト晒し
    .row
      = button_to '晒す', "/expors/#{params[:id]}/new", class:"l_font",
      method: :get
  - if not @reqs.blank?
    .row
      %h2.l_font リクエスト作品
    .row
      - @reqs.reverse_each do |req|
        .col3.m-2
          - if not req.work.images[0].blank?
            = link_to image_tag(req.work.images[0].url,
            class:'ll_square fit_c m_s-border'),"/works/#{req.work.req_id}"
          - else
            .alert.alert-dismissable.alert-danger
              %button.close{"data-dismiss" => "alert", :type => "button"} ×
              %p="req_id#{work.req_id}の画像が見つかりません"
