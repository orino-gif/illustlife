- content_for(:html_title) { 'ユーザー編集' }
%h1.ll_font.ws_bgc ユーザー編集
.container
  .row.my-5
    - item = '私の代表作（※クリエーターは必須）：'
    - ri_path = 'cres/parts/reg_img.html'
    = render ri_path, {label:item, rec:'hdr'}
    .col
      = disp_hdr(@cre, 'm_rect fit_c')
  .row.my-5
    = render ri_path, {label:'アイコン：', rec:'icon'}
    = icon(@cre, 'm_square')
  .row.my-5
    = render 'cres/parts/acct.html'
  .row.my-5
    = 'リンク先：'
    %table.table
      - r_path = 'cres/parts/reg_sns.html'
      = render r_path, {label:'twitter:', rec:'twtr'}
      = render r_path, {label:'pixiv:', rec:'pixiv'}
      = render r_path, {label:'instagram:', rec:'insta'}
      = render r_path, {label:'youtube:', rec:'yt'}
      = render r_path, {label:'link:', rec:'link'}
  .row.my-5
    = 'リクエスト受付内容：'
    = render 'cres/parts/recep.html'
  .row.my-5
    = '作業予定日数：'
    = render 'cres/parts/reg_days.html'
  .row.my-5
    = '口座情報：'
    %table.table
      %tr
        - if @is_cr_all
          %td='銀行口座： xxxxxxxxxxx'
        - else
          %td='登録口座なし'
      %td
        = button_to '登録', cr_path, method: :get
  .row.my-5
    = 'クレジットカード：'
    %table.table
      %tr
        - if @card
          %td='カード番号： xxxx-xxxx-xxxx-xxxx'
        - else
          %td='登録カードなし'
      %td
        = button_to '登録', new_card_path, method: :get,
        data: {"turbolinks" => false}
  .row.my-5
    = '再開通知リスト：'
    %table.table
      %tr
        %td
          = button_to 'リスト表示', resm_path, method: :get