- content_for(:html_title) { '晒された作品' }
%h1.ll_font.ws_bgc="#{@expor.kind} ⇒ #{@expor.hope}"
- up_cre = Cre.find_by(user_id:@expor.user_id)
.container
  .row.my-2
    %h2.l_font= @expor.kind
  .row
    =icon(up_cre,'ss_square')
    =up_cre.user.nick
  .row.my-5
    - if @expor
      .col5
      - if @expor.e_img?
        = image_tag(@expor.e_img.url, class:'l_rect fit_c')
      - else
        .l_line.m_rect.border.over= Msg.find_by(id: @expor.msg_id).s_msg
  .row
    .col5
      %button.btn.btn-light.m_font.ss_rect=link_to @expor.hope.to_s + 'に進める',
      "/expors/#{@expor.id}/ovrs/#{@expor.id}/new"