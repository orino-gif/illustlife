- chars.each.with_index(1) do |char, index|
  .l_square.mx-2.mb-5.pos_b
    - if char.thr.img?
      = link_to image_tag(char.thr.img.thumb320.url,
      class: 'full_rect fit_c border rounded-circle'),
      char_path(char.thr.id)
      .text-center.s_font
        = index.to_s + '位 ' + char.c_name
        %br
        = char.ttl.genre
        - if 6 < char.ttl.t_name.length
          = "「#{char.ttl.t_name}」".slice(0..5) + '...'
        -else
          = '「' + char.ttl.t_name + '」'
  - break if 10 == index