- content_for(:html_title) { 'クリエイター紹介' }
%h1.font-Xlarge.background_color-whitesmoke クリエイター紹介

.container
  .row
    %h2.font-large ■新着作品
  .row
    - if not @requests.nil?
      - @requests.reverse_each.with_index(1) do |request,index|
        - if (request.deliver_img?) && ('納品完了' == request.status)
          .col-3.m-2
            = link_to image_tag(request.deliver_img.url, class: 'size_Xlarge-square fit-cover border-solid4'), request_path(request.id)
            - index -= 1
        - break if index == 20
  .row
    %h2.font-large ■クリエイター
  .row
    - begin
      - @creators.each.with_index(1) do |creator,index| 
        // - user.restore ユーザーアカウントを復旧
        - if not creator.user.soft_destroyed?
          .col-auto.text-center
            - if creator.user.confirmed_at? #ユーザー認証済みの場合画像を表示
              = display_header(creator, 'size_Xlarge-square border-solid4 fit-cover')
              .font-small
              = creator.user.nickname
        - break if index == 20
    - rescue => e
      = p e
      