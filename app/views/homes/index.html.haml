- content_for(:html_title) { '好きなイラスト・漫画製作を手軽に依頼' }
%h1.font-Xlarge.background_color-whitesmoke クリエイター紹介

.container
  - if Rails.env.development?
    .row
      %h2.font-large ■2.5D漫画
    .row
      =link_to image_tag('/img/mobu.png', class: 'size_Xlarge-square fit_cover border_solid-medium'), manga_path(1)
  .row
    %h2.font-large ■クリエイター
  .row.margin_side-Xsmall
    - if not @requests.nil?
      - @creators.each.with_index(1) do |creator,index| 
        - if not creator.user.soft_destroyed?
          .padding_side-small.text-center.py-1
            - if creator.user.confirmed_at? #ユーザー認証済みの場合画像を表示
              = display_header(creator, 'size_Xlarge-square border_solid-medium fit_cover')
              .font-small.string_indention-small= creator.user.nickname
        - break if index == 20
  .row
    %h2.font-large ■リクエスト作品
  .row.margin_side-Xsmall
    - if not @requests.nil?
      - @requests.each.with_index(1) do |request,index|
        - if not request.deliver_img.blank?
          .padding_side-small.text-center.py-2
            = link_to image_tag(request.deliver_img.url, class: 'size_Xlarge-square fit_cover border_solid-medium'), request_path(request.id)
            - index -= 1
        - break if index == 20