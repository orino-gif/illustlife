- content_for(:html_title) { 'クリエイター紹介' }
%h1.border_color-whitesmoke クリエイター紹介

.container
  .row
    %h2 ■新着作品
  .row
    - if nil != @requests
      - @requests.reverse_each.with_index(1) do |request,i|
        - if (request.deliver_img?) && (request.status == '納品完了')
          .col3.m-2
            = link_to image_tag(request.deliver_img.url, class: 'size-Xlarge-square fit-cover border-solid4'), request_path(request.id)
            - i -= 1
        - break if i == 20
  .row
    %h2 ■クリエイター
  .row
    - begin
      // 1から20番までのユーザーを表示
      - @users.each.with_index(1) do |user,index| 
        .col-auto.text-center
          - if user.confirmed_at? #ユーザー認証済みの場合画像を表示
            = display_icon(user.creator, 'size-middle-square rounded-circle border-solid4 fit-cover border_color-steelblue')
            .font-small
            = user.nickname
        - break if index == 20
    - rescue => e
      = p e
      