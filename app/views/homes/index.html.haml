- content_for(:html_title) { 'イラストでコミュニケーション' }
%h1.ll_font.ws_bgc トップページ
.container
  - if Rails.env.development?
    .row
      %h2.l_font イラスト晒し
    .row
      - exte = 'll_square fit_c m_s-border'
      = link_to image_tag('/img/mobu.png', class: exte), '/mangas/1/illustlifes'
  .row
    %h2.l_font クリエイター
  .row.ss_m-side
    - if @cres
      - @cres.each.with_index(1) do |cre, index| 
        - if (not cre.user.soft_destroyed?) && cre.user.confirmed_at?
          .s_s-pdg.text-center.py-1
            = disp_hdr(cre,'ll_square m_s-border fit_c')
            .s_font.s_ind= cre.user.nick
        - break if 30 == index