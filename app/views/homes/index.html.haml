- title = '漫画　イラスト　投稿　ランキング'
- content_for(:html_title) { title }
%h1.ll_font.ws_bgc= title
.container
  = render 'terms'
  .row
    %h2.l_font.ml-3 人気
  .row
    %h3.ml-4.l_font キャラ
  .row.py-5.border
    = render 'char_img',
    {chars: @char_thr_ttls.order(looks: 'DESC'),cha: @chars,times:5, start:0}
  .mb-3.m_font.text-right
    = link_to 'ルックス6位以下', home_path(1)
  .row.ml-4.mb-4
    - if user_signed_in?
      - pass = "/chars/#{current_user.id}/new"
    - else
      - pass = user_session_path
    = button_to("おすすめのキャラを追加", pass , method: :get,
    class:"btn btn-light l_font border blu_col ml-2")
  .row
    %h3.ml-4.l_font.chara 作品タイトル
  .row.py-5.mb-3.border
    = render 'char_img',
    {chars: @char_thr_ttls.order(chara: 'DESC'),cha: @chars,times:5, start:0}
  .mb-3.m_font.text-right
    = link_to '性格6位以下',home_path(2)
  .row
    %h3.ml-4.l_font.chara 著者
  .row.py-5.mb-3.border
    = render 'char_img',
    {chars: @char_thr_ttls.order(chara: 'DESC'),cha: @chars,times:5, start:0}
  .mb-3.m_font.text-right
    = link_to '性格6位以下',home_path(2)
  .row
    %h3.ml-4.l_font.chara 頒布元
