- content_for(:html_title) { 'ユーザー情報編集' }
%h1 ユーザー情報編集

.container
  .row.my-5
    = 'アイコン：'
    .col-auto
      - if @creator.icon?
        = image_tag @creator.icon.url, class: 'icon'
      - else
        = image_tag('/img/mobu.png', class: 'icon' )
    .col-auto
      = form_with(model: @creator, local: true) do |f|
        = f.file_field :icon
        = f.submit '変更'
  .row.my-5
    = 'ヘッダー：'
    .col
      - if @creator.header?
        = image_tag @creator.header.url  ,class: 'header'
      - else
        = image_tag('/img/nothing.png',class: 'header')
      = form_with(model: @creator, local: true) do |f|
        = f.file_field :header
        = f.submit '登録'
  .row.my-5
    = "アカウント情報："
    %table.table
      %tr
        %td= "Eメール：#{@user.email}"
      %tr
        %td= " パスワード: xxxxxxxxxxx"
      %tr
        %td= "ニックネーム：#{@user.nickname}"
      %tr
        %td= "在籍 or 退会：在籍"
      %td
        %button{:type => "button"}
          = link_to "変更", edit_user_registration_path
  .row.my-5
    = "口座情報："
    %table.table
      %tr
        %td= "銀行口座： xxxxxxxxxxx"
      %td
        %button{:type => "button"}= link_to "登録", credit_path
  .row.my-5
    = "リンク先："
    %table.table
      %tr
        %td
          = form_with(model: @creator, local: true) do |f|
            = "twitter："
            = f.text_field :twitter ,{size:"70"}
            = submit_tag "変更"
      %tr
        %td
          = form_with(model: @creator, local: true) do |f|
            = "pixiv："
            = f.text_field :pixiv ,{size:"70"}
            = submit_tag "変更"
 