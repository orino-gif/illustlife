<h1><%= "ユーザー情報編集" %></h1>
<div class="container">
  <div class="row my-5">
    <div class="col-md-auto">
      <%= "アイコン：" %>
        <% if @creator.icon? %>
          <%= image_tag @creator.icon.url  ,class: 'icon' %>
        <% else %>
          <%= image_tag('/mobu.png',class: 'icon' ) %>
        <% end %>
    </div>
    <div class="col-10">
      <%= form_with(model: @creator, local: true) do |f| %>
        <%= f.file_field :icon %>
        <%= submit_tag("変更") %>
      <% end %>
    </div>
  </div>
  
  <div class="row my-5">
    <div class="col">
      <%= "ヘッダー：" %>
      <% if @creator.header? %>
        <%= image_tag @creator.header.url  ,class: 'header' %>
      <% else %>
        <%=image_tag('/nothing.png',class: 'header') %>
      <% end %>
      
      <%= form_with(model: @creator, local: true) do |f| %>
        <%= f.file_field :header %>
        <%= submit_tag("登録") %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <table class="table">
      <tr>
        <td><%= "Eメール, パスワード：#{@user.email}, xxxxxxxxxxx" %></td>
        <td><button type="button"><%= link_to "変更", edit_user_registration_path %></button></td>
      </tr>
      
      <tr>
        <td><%= "ニックネーム：" %></td>
        <td><%= @user.nickname %></td>
      </tr>
    </table>
  </div>
</div>



