<%= ENV['ACCESS_LABORATORY'] %>
<h1>ユーザー情報</h1>
<div class="container">
  <%= render  'shared/user_header' %>

  <% if @creator.fg_display == true then %>
    <div class="row">
      <%= "デフォルメキャラ(2～4頭身)：" %>
    </div>
    
    <div class="row my-5">
      <%# for num in 1..3 do %>
      <div class="col">
        <%= display_image(@creator.fg1) %>
      </div>
      
      <div class="col">
        <%= display_image(@creator.fg2) %>
      </div>
      
      <div class="col">
        <%= display_image(@creator.fg3) %>
      </div>
      <%# end %>
    </div>
  <% end %>
  
  <% if @creator.bg_display == true then %>
    <div class="row">
      <%= "背景：" %>
    </div>
    
    <div class="row my-5">
      <div class="col">
        <% if @creator.bg1? %>
          <%= image_tag @creator.bg1.url, class: 'thumbnail' %>
        <% else %>
          <%= image_tag '/img/noImage.png', class: 'thumbnail cover' %>
        <% end %>
      </div>
      
      <div class="col">
        <% if @creator.bg2? %>
          <%= image_tag @creator.bg2.url, class: 'thumbnail' %>
        <% else %>
          <%= image_tag '/img/noImage.png', class: 'thumbnail cover' %>
        <% end %>
      </div>
      
      <div class="col">
        <% if @creator.bg3? %>
          <%= image_tag @creator.bg3.url, class: 'thumbnail' %>
        <% else %>
          <%= image_tag '/img/noImage.png', class: 'thumbnail cover' %>
        <% end %>
      </div>
    </div>
  <% end %>
  
  <% if @creator.cg_display == true then %>
    <div class="row">
      <%= "前景(道具、衣装、エフェクト等)：" %>
    </div>
    
    <div class="row my-5">
      <div class="col">
        <% if @creator.cg1? %>
          <%= image_tag @creator.cg1.url, class: 'thumbnail' %>
        <% else %>
          <%= image_tag '/img/noImage.png', class: 'thumbnail cover' %>
        <% end %>
      </div>
      
      <div class="col">
        <% if @creator.cg2? %>
          <%= image_tag @creator.cg2.url, class: 'thumbnail' %>
        <% else %>
          <%= image_tag '/img/noImage.png', class: 'thumbnail cover' %>
        <% end %>
      </div>
      
      <div class="col">
        <% if @creator.cg3? %>
          <%= image_tag @creator.cg3.url, class: 'thumbnail' %>
        <% else %>
          <%= image_tag '/img/noImage.png', class: 'thumbnail cover' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>