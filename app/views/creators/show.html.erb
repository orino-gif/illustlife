<%= ENV['ACCESS_LABORATORY'] %>
<h1>ユーザー情報</h1>
<div class="container">
  <%= render  'shared/user_header' %>

  <% if @creator.deforume_display == true then %>
    <div class="row">
      <%= "デフォルメキャラ(2～4頭身)：" %>
    </div>
    
    <div class="row my-5">
      <%# for num in 1..3 do %>
      <div class="col">
        <%= display_image(@creator.deforume1) %>
      </div>
      
      <div class="col">
        <%= display_image(@creator.deforume2) %>
      </div>
      
      <div class="col">
        <%= display_image(@creator.deforume3) %>
      </div>
      <%# end %>
    </div>
  <% end %>
  
  <% if @creator.background_display == true then %>
    <div class="row">
      <%= "背景：" %>
    </div>
    
    <div class="row my-5">
      <div class="col">
        <% if @creator.background1? %>
          <%= image_tag @creator.background1.url, class: 'thumbnail' %>
        <% else %>
          <%= image_tag '/img/noImage.png', class: 'thumbnail cover' %>
        <% end %>
      </div>
      
      <div class="col">
        <% if @creator.background2? %>
          <%= image_tag @creator.background2.url, class: 'thumbnail' %>
        <% else %>
          <%= image_tag '/img/noImage.png', class: 'thumbnail cover' %>
        <% end %>
      </div>
      
      <div class="col">
        <% if @creator.background3? %>
          <%= image_tag @creator.background3.url, class: 'thumbnail' %>
        <% else %>
          <%= image_tag '/img/noImage.png', class: 'thumbnail cover' %>
        <% end %>
      </div>
    </div>
  <% end %>
  
  <% if @creator.foreground_display == true then %>
    <div class="row">
      <%= "前景(道具、衣装、エフェクト等)：" %>
    </div>
    
    <div class="row my-5">
      <div class="col">
        <% if @creator.foreground1? %>
          <%= image_tag @creator.foreground1.url, class: 'thumbnail' %>
        <% else %>
          <%= image_tag '/img/noImage.png', class: 'thumbnail cover' %>
        <% end %>
      </div>
      
      <div class="col">
        <% if @creator.foreground2? %>
          <%= image_tag @creator.foreground2.url, class: 'thumbnail' %>
        <% else %>
          <%= image_tag '/img/noImage.png', class: 'thumbnail cover' %>
        <% end %>
      </div>
      
      <div class="col">
        <% if @creator.foreground3? %>
          <%= image_tag @creator.foreground3.url, class: 'thumbnail' %>
        <% else %>
          <%= image_tag '/img/noImage.png', class: 'thumbnail cover' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>