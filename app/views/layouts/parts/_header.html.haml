%header
  .container-fluid
    .row
      / シンボルマークとサービス名を表示
      .col-auto.d-flex.align-items-center
        = link_to image_tag('/img/symbol.png', class: 'ss_square'), root_path
      .col-auto
        %span.ll_font
          %strong イラストライフ
      .col-xs.d-flex.align-items-center
        // %strong ～ 好きな事で楽しくスキルアップ ～
      
      / ポイントとアイコン表示
      .col.text-right
        - if user_signed_in?
          ="#{current_user.cre.pfm.point}ポイント"
          = icon(current_user.cre, 'ss_square')
        - else
          -# ='キャンペーン!! 9/1～9/16迄'
          -#  %br= '新規登録者様に、1000ポイントプレゼント!!'
    .row
      / メニューボタンを表示
      .col.text-right
        - if user_signed_in?
          -if 'homes' != controller.controller_name
            - if 0 < current_user.cre.pfm.pic
              %button.btn.btn-light.m_font= link_to '実績', reqs_path
            %button.btn.btn-light.m_font= link_to '晒す',
            expors_path
            - if ENV['ADMIN'] == current_user.email
              %button.btn.btn-light= link_to 'アカウント編集',
              edit_cre_path(params[:id])
            - else
              %button.btn.btn-light.m_font= link_to '設定',
              edit_cre_path(current_user.id)
            %button.btn.btn-light.m_font= link_to 'ログアウト',
            destroy_user_session_path, method: "delete"
            
        - else
          - if not devise_controller?
            %button.btn.btn-light.m_font= link_to '晒す',
            new_user_session_path
            %button.btn.btn-light.m_font= link_to 'ログイン',
            new_user_session_path
          %button.btn.btn-light.m_font= link_to '新規登録',
          new_user_registration_path