// 伝票詳細
%table.table
  %tr
    %td= "リクエストID：#{@req.id}"
  %tr
    %td= icon(@tx.cre,'ss_square') + '依頼者：' + @tx.nick
  %tr
    %td= icon(@rx.cre,'ss_square') + '承認者：' + @rx.nick
  %tr
    %td.m_line= 'リクエスト内容：' + @req.msg.to_s
  %tr
    %td= "ファイル形式：#{@req.fmt}"
    - if @req.anon?
      %tr
        %td= '非公開:有'
    - if @req.auto?
      %tr
        %td= '宛名入りサイン:有'
    - if @req.nsfw?
      %tr
        %td= 'NSFW:有'
  - if user_signed_in?
    - rel = false
    - if @tx.id == current_user.id || @rx.id == current_user.id
      - rel = true
    - if rel || Rails.env.development?
      %tr
        %td= "金額：#{@req.money}円"
      %tr
        - num_days = @rx.cre.sttg.work_d * 60 * 60 * 24
        - dl = @req.created_at + num_days
        %td.m_line
          = "締め切り日：#{dl.strftime('%Y/%m/%d %H:%M')}"
      %tr
        %td= "状態：#{@req.stts}"