- content_for(:html_title){ "#{@expor.hope}へ" }
%h1.ll_font.ws_bgc= "#{@expor.hope}へ"
.container
  .row
    %h2.l_font= @expor.hope.to_s + '作業開始しますか？'
  .row.my-3
    = form_with(model: @ovr,url: expor_ovrs_path, local:true) do |f|
      = f.hidden_field :up_id, :value => current_user.id
      = f.hidden_field :expor_id, :value => @expor.id
      = f.submit 'する', class:"l_font btn btn-light"