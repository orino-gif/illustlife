- content_for(:html_title){ "#{@expor.hope}工程" }
%h1.ll_font.ws_bgc= "#{@expor.hope}工程"
.container
  .row.my-2
    %h2.l_font= @expor.kind
  .row.my-5
    - if ("キャラデザ, 背景デザ, プロット").include?(@expor.kind)
      .lll_square.order.over.p-3.pre_wrap.l_line.b
        = Msg.find_by(id: @expor.msg_id).s_msg.gsub(/[\n]/,"\n")
    - else
      = image_tag(@expor.e_img.url, class:'lll_square fit_con ws_bgc')
  .row.mt-3
    .col-1.text-center
      = icon(@cre,'ss_square')
      %br= @cre.user.nick
    .l_f-from.block-baloon-left.left_pos= @expor.cmt
  - if @expor.e_img? && @ovr.up_id != current_user.id
    .row.mt-5
      = button_to('ダウンロード', download_expor_ovrs_path(@expor.id),
      {method: :get, class:"btn btn-light border",
      params:{expor_id: params[:id], ovr_id: 'NULL'}})
  - if @ovr.up_id == current_user.id || '自分で' == @expor.who
    .row.mt-4
      %h2.l_font= @expor.hope
    - if '完了' != @ovr.expor.w_st
      .row
        = form_with(model: @ovr,url: expor_ovr_path, local:true) do |f|
          = f.label :o_img, @expor.hope + 'のファイルを選択:',
          class:'lll_img btn btn-light border my-5'
          = f.file_field :o_img, class:'lll_img lll_square preview',
          style:"display:none;"
          .lll_img.lll_square.ws_bgc.mb-5.fit_con
          = f.submit 'アップロード', class:"btn btn-light border"
    - else
      .row
        = image_tag(@ovr.o_img.url, class:'lll_square fit_con')
      .row
        .col-1.text-center
          = icon(@cre,'ss_square')
          %br= @cre.user.nick
      - if @ovr.up_id == current_user.id && '自分で' != @expor.who
        .row.mt-5
          = button_to('ダウンロード', down_expor_ovrs_path(@expor.id),
          {method: :get, class:"btn btn-light border", params:{expor_id: params[:id],
          ovr_id: @ovr.id}})