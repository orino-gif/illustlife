- content_for(:html_title) { '好きなキャラを追加' }
%h1.ll_font.ws_bgc 好きなキャラを追加
.container
  .row.my-5
    .col-md-8.border.border-secondary
      = form_with(model: @char, local:true) do |f|
        %br
          = f.label 'キャラ名:'
          %br
          = f.text_field :c_name, class:'size_variable-form'
        %br
        = f.label '引用画像(png, jpeg, jpg):', class:'lll_img'
        %br
        = f.file_field :img, class:'lll_img preview'
        .lll_img.ws_bgc.lll_square
        %br
          = f.label '画像引用先URL:'
          %br
          = f.text_field :url, class:'size_variable-form'
        %br
        = '<ジャンル>'
        %br
        = f.radio_button :genre, :'漫画'
        = f.label :genre, '漫画'
        = f.radio_button :genre, :'アニメ'
        = f.label :genre, 'アニメ'
        = f.radio_button :genre, :'イラスト'
        = f.label :genre, 'イラスト'
        %br
        %br
          = f.label '作品名:'
          %br
          = f.text_field :ttl, class:'size_variable-form'
        = f.submit '追加', class:"btn btn-light l_font border my-5 ss_rect"